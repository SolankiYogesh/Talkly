  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "echo 'ðŸ§¹ Cleaning Mobile Workspace...'; rm -rf yarn.lock node_modules packages/mobile/node_modules packages/mobile/ios/build packages/mobile/ios/Pods packages/mobile/ios/Podfile.lock packages/mobile/android/.gradle packages/mobile/android/build packages/mobile/android/app/build packages/mobile/android/app/.cxx packages/shared/node_modules packages/web/node_modules && echo 'âœ… Mobile workspace cleaned!'; echo 'ðŸ§¹ Cleaning Shared Workspace...'; rm -rf packages/shared/node_modules && echo 'âœ… Shared workspace cleaned!'; echo 'ðŸ§¹ Cleaning Web Workspace...'; rm -rf packages/web/node_modules && echo 'âœ… Web workspace cleaned!'",
    "prettier": "prettier --write 'packages/*/src/**/*.{js,jsx,ts,tsx}'",
    "linter": "eslint --fix 'packages/*/src/**/*.{js,jsx,ts,tsx}'",
    "reset": "cd packages/mobile && watchman watch-del-all && APP_ENV=dev npx  react-native start --reset-cache",
    "pod": "yarn workspace @talkly/mobile pod-install",
    "postinstall": "cd packages/mobile && patch-package",
    "android-studio": " open -a 'Android Studio' packages/mobile/android",
    "xcode": "open -a Xcode packages/mobile/ios",
    "start": "node ./commands/run.js",
    "build": "yarn workspace @talkly/web build",
    "prepare": "husky",
    "android": "yarn workspace @talkly/mobile android",
    "ios": "yarn workspace @talkly/mobile ios"
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
